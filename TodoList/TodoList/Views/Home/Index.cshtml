@model List<TodoList.Models.Task>
@{
    ViewData["Title"] = "Start Page";
}

@if(Model.Count > 0){
    <div class="taskList">
        <div class="header">Ваши задачи</div>
        @foreach(var task in Model){
            <div class="task">@task.Name</div>
        }
    </div>
    await Html.RenderPartialAsync("_Task");
} else {
    <div class="noTasks">У Вас не имеется задач :)</div>
}